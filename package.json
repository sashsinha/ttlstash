{
  "name": "ttlstash",
  "version": "1.1.0",
  "description": "Tiny TTL cache for localStorage plus a one-liner fetch cache with stale-while-revalidate.",
  "license": "MIT",
  "author": "Sash Sinha",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run --environment jsdom",
    "test:watch": "vitest --environment jsdom",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "npm run build && changeset publish",
    "prepublishOnly": "npm run lint && npm run build && npm test"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/node": "^22.5.0",
    "jsdom": "^24.1.0",
    "prettier": "^3.3.3",
    "tsup": "^8.1.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "localStorage",
    "cache",
    "ttl",
    "swr",
    "fetch",
    "stale-while-revalidate"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sashsinha/ttlstash.git"
  }
}
